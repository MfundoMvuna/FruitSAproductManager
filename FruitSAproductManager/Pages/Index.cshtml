@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h1 class="text-center">Welcome to the Product Management System</h1>

    <div class="row">
        <div class="col-md-6 mb-4">
            <a href="/Categories/Index" class="card text-decoration-none">
                <div class="card-body text-center">
                    <h4 class="card-title">Manage Categories</h4>
                    <p class="card-text">View, add, and edit product categories.</p>
                </div>
            </a>
        </div>
        <div class="col-md-6 mb-4">
            <a href="/Products/Overview" class="card text-decoration-none">
                <div class="card-body text-center">
                    <h4 class="card-title">Manage Products</h4>
                    <p class="card-text">View, add, edit, and delete products.</p>
                </div>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-4">
            <a href="/Products/Upload" class="card text-decoration-none">
                <div class="card-body text-center">
                    <h4 class="card-title">Import and Export Products</h4>
                    <p class="card-text">Upload and download products using Excel spreadsheets.</p>
                </div>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <a href="/HowTo/Index" class="card text-decoration-none">
                <div class="card-body text-center">
                    <h4 class="card-title">How-To Guides</h4>
                    <p class="card-text">Access guides on how to use the system effectively.</p>
                </div>
            </a>
        </div>
        <div class="col-md-6 mb-4">
            <a href="/OtherFeature/Index" class="card text-decoration-none">
                <div class="card-body text-center">
                    <h4 class="card-title">Other Feature</h4>
                    <p class="card-text">Description of another feature or function.</p>
                </div>
            </a>
        </div>
    </div>
</div>

